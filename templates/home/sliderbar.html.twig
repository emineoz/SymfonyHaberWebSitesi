<!-- Featured News Slider Start -->
<div class="container-fluid pt-5 mb-3">
    <div class="container">
        <div class="section-title">
            <h4 class="m-0 text-uppercase font-weight-bold">En Güncel Haberler</h4>
        </div>
        <div class="owl-carousel news-carousel carousel-item-4 position-relative">
            {% for rs in featuredata %}
            <div class="position-relative overflow-hidden" style="height: 300px;">
                <img class="img-fluid h-100" src="{{ asset('uploads/images/'~ rs.image) }}" style="object-fit: cover;">
                <div class="overlay">

                    <a class="h6 m-0 text-white text-uppercase font-weight-semi-bold" href="{{ path('app_product',{'id':rs.id}) }}">{{ rs.title }}</a>
                </div>
            </div>
            {% endfor %}

        </div>
    </div>
</div>
