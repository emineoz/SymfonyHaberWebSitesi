<div class="container-fluid">
    <div class="row">
        <div class="col-lg-7 px-0">
            <div class="owl-carousel main-carousel position-relative">

                {% for rs in sliderdata %}
                <div class="position-relative overflow-hidden" style="height: 500px;">
                    <img class="img-fluid h-100" src="{{ asset('uploads/images/'~ rs.image) }}" style="object-fit: cover; height: 700px">
                    <div class="overlay">
                        <a class="h2 m-0 text-white text-uppercase font-weight-bold" href="{{ path('app_product',{'id':rs.id}) }}">{{ rs.title }}</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-lg-5 px-0">
            <div class="row mx-0">
                {% for rs in data %}
                <div class="col-md-6 px-0">
                    <div class="position-relative overflow-hidden" style="height: 250px;">
                        <img class="img-fluid w-100 h-100" src="{{ asset('uploads/images/'~ rs.image) }}" style="object-fit: cover;">
                        <div class="overlay">

                                <a class="h2 m-0 text-white text-uppercase font-weight-bold" href="{{ path('app_product',{'id':rs.id}) }}" style="font-size:20px">{{ rs.title }} </a>


                        </div>
                    </div>
                </div>
                {% endfor %}
        </div>
    </div>
</div>
</div>
<!-- Main News Slider End -->
