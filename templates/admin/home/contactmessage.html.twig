{% extends 'adminbase.html.twig' %}

{% block title%} Contact Message Page {% endblock %}

{% block content %}

<div class="right_col" role="main">
    <!-- Start content -->
    <div class="content">
        <div class="container">


            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Contact Message</h4>
                        <ol class="breadcrumb p-0 m-0">
                            <li>
                                <a href="#">Admin</a>
                            </li>
                            <li>
                                <a href="#">Category </a>
                            </li>
                            <li class="active">
                                Manage Categories
                            </li>
                        </ol>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <!-- end row -->
            <hr />

            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box">
                        <h4 class="m-t-0 header-title"><b>Contact Message List </b></h4>

                    </div>
                </div>
            </div>
            <!-- end row -->

                    <div class="x_content">

                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                <tr >

                                    <th class="column-title" style="display: table-cell;">Id</th>
                                    <th class="column-title" style="display: table-cell;">Name </th>
                                    <th class="column-title" style="display: table-cell;">Email </th>
                                    <th class="column-title" style="display: table-cell;">Phone</th>
                                    <th class="column-title" style="display: table-cell;">Subject</th>
                                    <th class="column-title" style="display: table-cell;">Message</th>
                                    <th class="column-title" style="display: table-cell;">Status</th>
                                    <th class="column-title no-link last" style="display: table-cell;"><span class="nobr">Action</span>
                                    </th>

                                </tr>
                                </thead>

                                <tbody>
                                {% for rs in messageList %}
                                <tr >

                                    <td> {{ rs.id }}</td>
                                    <td >{{ rs.name }}</td>
                                    <td >{{ rs.email }}</td>
                                    <td >{{ rs.phone }}</td>
                                    <td >{{ rs.subject }}</td>
                                    <td >{{ rs.message }}</td>
                                    <td >{{ rs.status }}</td>

                                    <td ><a href="{{ path('app_admin_contactmessage_show',{'id':rs.id}) }}" class="fa fa-pencil" style="color: #29b6f6;"></a>
                                    &nbsp;<a href="{{ path('app_admin_contactmessage_delete', {'id':rs.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');" class="fa fa-trash-o" style="color: #f05050"></a> </td>

                                </tr>
                                {% endfor %}


                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>

        </div> <!-- container -->

    </div> <!-- content -->
</div>
{% endblock %}
