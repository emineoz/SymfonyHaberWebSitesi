{% extends 'adminbase.html.twig' %}

{% block title%} Category Page {% endblock %}

{% block content %}

<div class="right_col" role="main">
    <!-- Start content -->
    <div class="content">
        <div class="container">


            <div class="row">
                <div class="col-xs-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Add Category Page</h4>

                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end row -->
            <hr />

               </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <form action="{{ path('app_admin_category_save') }}" class="form-horizontal" name="category" method="post">
                                    <div class="form-group" >
                                        <label class="col-md-2 control-label" style="color:black;margin: 2px; " >Category <span class="required">*</span></label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control"  rows="2" name="category" required>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label" style="color:black; margin: 2px;">Description</label>
                                        <div class="col-md-10">
                                            <textarea class="form-control" rows="3" name="description" ></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" style="color:black;margin: 2px;">Posting Date </label>
                                        <div class="col-md-10">
                                            <textarea class="form-control" rows="1" name="posting_date" ></textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label" style="color:black; margin: 2px;">Slug </label>
                                        <div class="col-md-10">
                                            <textarea class="form-control"  name="slug" ></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group ">
                                        <label class="col-md-2 control-label" style="color:black; margin: 2px;">Status </label>
                                        <div class="col-md-10">
                                            <select class="form-control"  name="status" >
                                                <option>True</option>
                                                <option>False</option>

                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 control-label">&nbsp;</label>
                                        <div class="col-md-10">

                                            <button type="submit" class="btn btn-custom waves-effect waves-light btn-md" name="submit" style="background-color:#80bdff;margin-top: 12px">
                                                Save
                                            </button>
                                        </div>
                                    </div>

                                </form>
                            </div>


                        </div>











                    </div>
                </div>
            </div>
            <!-- end row -->


        </div> <!-- container -->

    </div> <!-- content -->
</div>
{% endblock %}
