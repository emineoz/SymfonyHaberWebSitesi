{% extends 'adminbase.html.twig' %}

{% block title %}Product index{% endblock %}

{% block head %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures ) { window.open( windowURL, windowName, windowFeatures ) ; 	}
    </SCRIPT>

{% endblock %}

{% block body %}
    <div class="right_col" role="main">
    <div class="content">
<div class="container">


    <!-- end row -->


    <div class="row">
        <div class="col-sm-12">
            <div class="card-box">
                <h5 class="m-t-0 header-title" style=""><b>Product List </b></h5>

                  <a href="{{ path('app_admin_product_new') }}" class="btn btn-secondary" style="margin-left:1130px">Create new </a>

            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="x_content">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Title</th>
                <th>Image</th>
                <th>IGallery</th>
                <th>Status</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.category.category }}</td>
                <td>{{ product.title }}</td>

                <td>
                 <img src="{{ asset('uploads/images/'~ product.image) }}" height="40">
                </td>
                <td>
                    <a href="javascript:openWin('{{ path('app_admin_image_new', {'pid': product.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                        <img src="{{ asset('assets/admin/img') }}/gallery.png" height="40" title="Image Gallery">
                    </a>
                </td>
                <td>{{ product.status }}</td>
                <td>{{ product.slug }}</td>
                <td>
                    <a href="{{ path('app_admin_product_show', {'id': product.id}) }}" class="btn btn-success">Show</a>
                    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-secondary">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    </div>


</div>
    </div>
    </div>

    </div> <!-- container -->

    </div> <!-- content -->
    </div>
{% endblock %}
